<input type="button" id="btnEmployeList" value="List Employee" class="btn-default" />
<div id="divListEmployee" class="table table-responsive"></div>
<br /><br />
<input type="text" id="userInput" />
<div id="underInput"></div>

<script type="text/javascript">
    $(document).ready(function () {

        $('#btn').click(function () {
            $.nec.gonder();
        });
        //jquery get list with ajax example
        $("#btnEmployeList").click(function () {
            var empId = $('#userInput').val();
            $.ajax({
                url: "/api/employees/" + empId,
                type: "GET",
                success: function (data) {
                    var result = data.FirstName + ' ' + data.LastName;

                    $('#divListEmployee').html(result);


                    //for (var i = 0; i < data.length; i++) {
                    //    $('<tr><td>' + data[i].FirstName + '</td>' +
                    //        '<td>' + data[i].LastName + '</td></tr>').appendTo("#divListEmployee");
                    //}
                },
                error: function (msg) { alert(msg); }
            });
        });
    });
</script>